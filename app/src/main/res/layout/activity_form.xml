<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christophergu.vetories.FormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/form_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColorHint="@color/gray"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/form_story_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="title"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColorHint="@color/gray"
                android:textColor="@color/red"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/form_story_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="content"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/gray"
                android:textColor="@color/orange"
                android:textSize="25sp" />

            <RadioGroup
                android:id="@+id/form_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000">

                <RadioButton
                    android:id="@+id/option_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/gray"
                    android:fontFamily="sans-serif-black"
                    android:onClick="onRadioButtonClicked"
                    android:orientation="vertical"
                    android:text="male"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/option_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/gray"
                    android:fontFamily="sans-serif-black"
                    android:onClick="onRadioButtonClicked"
                    android:orientation="vertical"
                    android:text="female"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/option_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/gray"
                    android:fontFamily="sans-serif-black"
                    android:onClick="onRadioButtonClicked"
                    android:orientation="vertical"
                    android:text="other"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/form_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="date of birth"
                android:onClick="showDatePickerDialog"
                android:textColorHint="@color/gray"
                android:textColor="@color/yellow"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/form_veteran_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="veteran experience"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:textColorHint="@color/gray"
                android:textColor="@color/green"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/form_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/gray"
                android:textColor="@color/blue"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/form_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="12dp"
                android:background="#00000000"
                android:fontFamily="sans-serif-black"
                android:hint="phone"
                android:inputType="phone"
                android:textColorHint="@color/gray"
                android:textColor="@color/purple"
                android:textSize="25sp" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/form_yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_check_circle_white_36dp" />

</android.support.design.widget.CoordinatorLayout>